#:kivy 2.3.0
<Root>

    calculator_field: calculator_field

    orientation: 'vertical'
    TextInput:
        id: calculator_field
        text: "0"
        readonly: True
        disabled: True
        font_size: 30
        size_hint: (1, 0.3)

    GridLayout:
        rows: 5
        columns: 4
        padding: 7
        spacing: 7
        size_hint: (1,0.5)
        Button:
            text: "1"
            font_size: 26
            on_press: root.cal_symbol('1')
        Button:
            text: "2"
            font_size: 26
            on_press: root.cal_symbol('2')
            background_color: (157/255, 157/255,157/255,1)

        Button:
            text: "3"
            font_size: 26
            on_press: root.cal_symbol('3')
        Button:
            text: "<-"
            font_size: 26
            on_press: root.erase()
        Button:
            text: "4"
            font_size: 26
            on_press: root.cal_symbol('4')    
        Button:
            text: "5"
            font_size: 26
            on_press: root.cal_symbol('5')
        Button:
            text: "6"
            font_size: 26
            on_press: root.cal_symbol('6')
        Button:
            text: "-"
            font_size: 26
            on_press: root.cal_symbol('-')
        Button:
            text: "7"
            font_size: 26
            on_press: root.cal_symbol('7')
        Button:
            text: "8"
            font_size: 26
            on_press: root.cal_symbol('8')
        Button:
            text: "9"
            font_size: 26
            on_press: root.cal_symbol('9')
        Button:
            text: "X"
            font_size: 26
            on_press: root.cal_symbol('*')
        Button:
            text: "+/-"
            font_size: 26
            on_press: root.postive_negative()
        Button:
            text: "0"
            font_size: 26
            on_press: root.cal_symbol('0')
        Button:
            text: "()"
            font_size: 26
            on_press: root.brackets()
        Button:
            text: "/"
            font_size: 26
            on_press: root.cal_symbol('/')
        Button:
            text: "."
            font_size: 26
            on_press: root.cal_symbol('.')
        Button:
            text: "C"
            font_size: 26
            on_press: root.clear()
        Button:
            text: "+"
            font_size: 26
            on_press: root.cal_symbol('+')
        Button:
            text: "="
            font_size: 26
            on_press: root.get_results()

